<div class="container">
  <div class="row">
  <div class="card col mt-3 mr-2 text-center shadow p-3 mb-5 bg-white rounded" style="width: 30rem;">
    <div class="card-body">
      <h5 class="card-title"><%= @event.name %></h5>
      <p class="card-text"><%= @event.description %></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Hosted by: <%= @event.creator.name %></li>
      <li class="list-group-item">At: <%= @event.location %></li>
      <li class="list-group-item">By: <%= @event.date %></li>
    </ul>
    <div class="card-body">
      <a> <%= link_to 'Back to event list', root_path, class: "card-link" %></a>
      <a> <%= link_to 'Attend', event_path, class: "card-link ml-3" %></a>
    </div>
  </div>
  <div class="card col mt-3 text-center shadow p-3 mb-5 bg-white rounded" style="width: 30rem;">
    <div class="card-body">
      <h5 class="card-title">Attendees</h5>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Hosted by: <%= @event.creator.name %></li>
    </ul>
  </div>
  </div>
</div>
