<%= form_with(model: user, local: true) do |f| %>
  <div>
    <div>
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, class: "input", autofocus: true %>
    </div>
  </div>

  <div>
    <div>
      <%= f.submit "Sign Up", class: "btn bg-success" %>
    </div>
  </div>
<% end %>
